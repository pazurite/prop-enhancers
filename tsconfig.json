{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "strictNullChecks": true,
    "types": [
      "node",
      "webpack-env"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "app/**/*.vue",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "tests",
    "config",
    "jest"
  ]
}
